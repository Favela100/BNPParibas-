  <script>
    if (localStorage.getItem('connected') !== 'true') {
      // window.location.href = "login.html";
    }
    function logout() {
      localStorage.removeItem('connected');
      alert("Déconnexion réussie.");
      // window.location.href = "login.html";
    }
    document.getElementById('date-time').innerText = new Date().toLocaleString('fr-FR', { dateStyle: 'short', timeStyle: 'short' });
    function showPage(pageId) {
        document.querySelectorAll('.page').forEach(page => page.classList.remove('active'));
        document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
        document.getElementById(pageId).classList.add('active');
        const navItem = document.querySelector(`.nav-item[onclick="showPage('${pageId}')"]`);
        if (navItem) navItem.classList.add('active');
    }
    function sendTransfer() {
        const beneficiary = document.getElementById('beneficiary').value;
        const amount = document.getElementById('amount').value;
        const email = document.getElementById('email').value;
        if (!beneficiary || !amount || !email) {
            alert('Veuillez remplir tous les champs du formulaire.');
            return;
        }
        if (!email.includes('@')) {
            alert('Veuillez saisir une adresse email valide.');
            return;
        }
        alert(`Un virement de ${amount} € a été initié pour ${beneficiary}. Un message de confirmation sera envoyé à ${email}.`);
    }
  </script> 
